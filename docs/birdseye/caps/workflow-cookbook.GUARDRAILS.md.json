  "deps": [
    "in::README.md",
    "in::docs/ROADMAP_AND_SPECS.md",
    "in::workflow-cookbook/HUB.codex.md",
    "out::workflow-cookbook/BLUEPRINT.md",
    "out::workflow-cookbook/RUNBOOK.md",
    "out::workflow-cookbook/EVALUATION.md",
    "out::workflow-cookbook/CHECKLISTS.md",
    "out::workflow-cookbook/TASK.codex.md",
    "out::workflow-cookbook/tools/",
    "out::workflow-cookbook/scripts/"
  ],
  "deps_out": [
    "workflow-cookbook/BLUEPRINT.md",
    "workflow-cookbook/RUNBOOK.md",
    "workflow-cookbook/EVALUATION.md",
    "workflow-cookbook/CHECKLISTS.md",
    "workflow-cookbook/TASK.codex.md",
    "workflow-cookbook/tools/",
    "workflow-cookbook/scripts/"
  ],
  "deps_in": [
    "README.md",
    "docs/ROADMAP_AND_SPECS.md",
    "workflow-cookbook/HUB.codex.md"
